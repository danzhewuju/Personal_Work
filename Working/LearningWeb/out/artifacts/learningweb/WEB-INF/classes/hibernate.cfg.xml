<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/learningweb</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.pool_size">100</property>

        <property name="jdbc.fetch_size">50 </property>

        <property name="hibernate.show_sql">true </property>

        <property name="connection.username">root</property>

        <property name="connection.password">3434</property>

        <property name="jdbc.batch_size">23 </property>

        <mapping class="Entity.AdministratorEntity"/>
        <mapping class="Entity.ChapterEntity"/>
        <mapping class="Entity.CourseEntity"/>
        <mapping class="Entity.DataEntity"/>
        <mapping class="Entity.ExamEntity"/>
        <mapping class="Entity.ProgressEntity"/>
        <mapping class="Entity.StudentEntity"/>
        <mapping class="Entity.TeacherEntity"/>
        <mapping class="Entity.AddcourseEntity"/>
       <mapping class="Entity.AssociationEntity"/>
        <mapping class="Entity.LearnEntity"/>
        <mapping class="Entity.RelationEntity"/>
    </session-factory>
</hibernate-configuration>